generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Gender {
  Male
  Female
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  name          String?
  gender        Gender?
  birthDate     DateTime?
  height        Float?
  weight        Float?
  mainGoal      String?
  weightGoal    Float?
  activityLevel String?
  allergies     Allergy[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  refreshToken  String?   @db.VarChar(255)
  accessToken   String?   @db.VarChar(255)
}

model Allergy {
  id        Int      @id @default(autoincrement())
  allergy   Json     @default("{}")
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId])
}

model Food {
  id             Int             @id @default(autoincrement())
  name           String
  description    String?         @db.Text
  imageUrl       String?
  prepTime       Int? // waktu persiapan dalam menit
  cookTime       Int? // waktu memasak dalam menit
  servings       Int? // jumlah porsi
  steps          Step[]
  nutritionFacts NutritionFact[]
  ingredients    Ingredient[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Step {
  id        Int       @id @default(autoincrement())
  title     String
  order     Int // urutan langkah
  substeps  Substep[]
  food      Food      @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([foodId])
}

model Substep {
  id          Int      @id @default(autoincrement())
  description String   @db.Text
  order       Int // urutan substep
  step        Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  stepId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([stepId])
}

model NutritionFact {
  id        Int      @id @default(autoincrement())
  name      String // contoh: Kalori, Protein, Lemak
  value     String // contoh: 285 kkal, 12 g
  order     Int // urutan tampilan
  food      Food     @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([foodId])
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  name      String // nama bahan
  quantity  String // jumlah bahan (contoh: 250 g, 1 sdt)
  order     Int // urutan tampilan
  food      Food     @relation(fields: [foodId], references: [id], onDelete: Cascade)
  foodId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([foodId])
}
